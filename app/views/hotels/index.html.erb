<h1>Listing hotels</h1>

<table>
  <tr>
    <th>Hotel name</th>
    <th>Address</th>
    <th>City</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Website</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @hotels.each do |hotel| %>
  <tr>
    <td><%= hotel.hotel_name %></td>
    <td><%= hotel.address %></td>
    <td><%= hotel.city %></td>
    <td><%= hotel.email %></td>
    <td><%= hotel.phone %></td>
    <td><%= hotel.website %></td>
    <td><%= link_to 'Show', hotel %></td>
    <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
    <td><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

